<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Balstikconverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_dark</item>
        <item name="colorSecondaryVariant">@color/background_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/background_orange</item>
        <item name="colorPrimaryVariant">@color/background_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_orange</item>
        <item name="colorSecondaryVariant">@color/background_orange</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.Balstikconverter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Balstikconverter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Balstikconverter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>